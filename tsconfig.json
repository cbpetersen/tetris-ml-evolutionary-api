{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "files": [
    "./node_modules/typescript/lib/lib.es6.d.ts",
    // "./node_modules/@types/node/index.d.ts",
    "./src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/settings.json",
    "src/**/*.ts",
    "src/server.ts"
  ]
}
